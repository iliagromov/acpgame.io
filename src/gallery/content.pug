mixin itemVideo(n)
    .page-item
        .page__img
            img(src="assets/img/img-modal-gallery-"+n+".png")
        .page-item_bg.open-modal(data-modal="modal-gallery")

.wrapper
        include ../blocks/shared/on-main-yellow
        h1.page__title-h1.page__title-h1_text-shadow_white
            span Фотоальбом <br>
            span наших игр
        
        .page-items
                +itemVideo(2)
                +itemVideo(1)
                +itemVideo(2)
                +itemVideo(2)
                +itemVideo(2)
                
include ../blocks/mixins/mixin-next-section
+nextSection('Следующий раздел', 'сми о нас', '../smi/smi.html')